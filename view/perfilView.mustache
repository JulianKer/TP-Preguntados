<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/perfil.css">
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZyPvOL6RNuAFLAp4fRzDauddjtpNtU0Q&callback=initMap"></script>
    <script src="/public/js/googleMaps.js" defer></script>
    <script src="/public/js/ubicacionDelPerfil.js" defer></script>

    <title>Perfil de Usuario - QuizMaster</title>
</head>
<body>

    <div class="main-content">
        <div class="profile-card">
            <div class="profile-header">
                <div class="cont-avataryname">
                    <div class="profile-avatar"></div>
                    <div>
                        <h1 class="profile-name">{{usuario.nombre}} {{usuario.apellido}}</h1>
                        <p class="profile-username">@{{usuario.nombreusuario}}</p>
                    </div>
                </div>
                <div>
                    <img class="qr" src="/public/images/icons/codigoQR.png">
                </div>
            </div>

            <div class="profile-stats">
                <div class="stat-item">
                    <p class="stat-label">Ranking</p>
                    <p class="stat-value">#{{usuario.posicionEnElRanking}}</p>
                </div>
                <div class="stat-item">
                    <p class="stat-label">Puntaje</p>
                    <p class="stat-value">{{usuario.puntaje_usuario}}</p>
                </div>
            </div>
            <div id="mapaPerfil">
                <input type="hidden" id="lat" value="{{coordenadas.lat}}">
                <input type="hidden" id="lng" value="{{coordenadas.lng}}">
                <iframe src="https://www.google.com/maps?q={{usuario.ubicacion}}&h1=es;z=14&output=embed" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                <label><img src="/public/images/icons/locationIcon.svg" alt="locationIcon" title="Ubicación seleccionada" style="margin-bottom: .3em"> <span id="selectedLocation">Ninguna</span></label>
            </div>

            {{^estoyEnMiPerfil}}
                <a href="/ranking" class="button">Volver al ranking</a>
            {{/estoyEnMiPerfil}}
        </div>

        {{#estoyEnMiPerfil}}
            <div class="preferencias">
                <h2 class="recent-games-title">Ajustes</h2>
                <form id="musicaForm" method="POST">
                    <p>Música:</p>
                    <div class="radio-container">
                        <input type="radio" name="musica" value="SI" id="musicaSi" {{#musicaActivada}}checked{{/musicaActivada}}>
                        <label for="musicaSi">Activada</label>

                        <input type="radio" name="musica" value="NO" id="musicaNo" {{^musicaActivada}}checked{{/musicaActivada}}>
                        <label for="musicaNo">Desactivada</label>
                    </div>
                </form>
            </div>
        {{/estoyEnMiPerfil}}

        <div class="games-card">
            <h2 class="recent-games-title">Partidas Recientes</h2>
            <ul class="game-list">
                <li class="game-item">
                    <span>Partida 1 - Victoria</span>
                    <span class="victory">+100 puntos</span>
                </li>
                <li class="game-item">
                    <span>Partida 2 - Derrota</span>
                    <span class="defeat">+30 puntos</span>
                </li>
                <li class="game-item">
                    <span>Partida 3 - Victoria</span>
                    <span class="victory">+100 puntos</span>
                </li>
            </ul>
        </div>
    </div>
</body>
</html>