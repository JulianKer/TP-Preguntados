    <div class="question-card {{categoria}}">
        <h1 class="categoria">路 {{pregunta.nombre}} 路</h1>
        <h2 class="question-title">{{pregunta.pregunta}}</h2>

        <form action="/partida/pregunta" method="POST" class="options-form" id="form">
            <input type="hidden" name="id_pregunta" value="{{pregunta.id_pregunta}}">

            <ul class="options-list">
                {{#opciones}}
                    <li class="option-item">
                        <label class="option-button
                        {{#esDeCorreccion}}
                            {{#correcta}} option-correct {{/correcta}}
                            {{^correcta}}
                                {{#seleccionada}} option-incorrect {{/seleccionada}}
                            {{/correcta}}
                        {{/esDeCorreccion}}">
                            <input type="radio" class="option-button" name="respuesta" value="{{id_respuesta}}" style="display: none">
                            {{descripcion}}
                        </label>
                    </li>
                {{/opciones}}
            </ul>
        </form>
        <div class="contenedor-botones">
            {{#esDeCorreccion}}
                {{#laSeleccionadaEsCorrecta}}
                    <button class="next-button end"><a href="/partida/pregunta">Siguiente <img src="/public/images/icons/arrowRightIcon.svg"></a></button>
                {{/laSeleccionadaEsCorrecta}}
                {{^laSeleccionadaEsCorrecta}}
                    <button class="back-button start"><a href="/principal/home">Volver al inicio</a></button>
                    <p>Puntaje obtenido: 100</p>
                {{/laSeleccionadaEsCorrecta}}
            {{/esDeCorreccion}}
        </div>
        <a class="report-button"><img src="/public/images/icons/flagReportIcon.svg" title="Reportar pregunta" alt="report"></a>
    </div>
</div>
</body>
